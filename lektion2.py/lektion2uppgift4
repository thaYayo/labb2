#print(aktiva_kurs)




aktiva_lista = []

for student in data["studenter"]:
    namn = student[0]
    detaljer = student[1]
    if detaljer["aktiv"]:
        aktiva_lista.append(namn)

aktiva_studenter = tuple(aktiva_lista)

#print(aktiva_studenter)

aktiva = {
    ämne
    for student in data["studenter"] if student[1]["aktiv"]
    for ämne in student[1]["ämnen"]

}

print(aktiva)